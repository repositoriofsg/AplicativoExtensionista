<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="32dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="32dp"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/textViewPostagemPerfilTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="titulo"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textViewPostagemPerfilDescricao"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="50dp" />

        <TextView
            android:id="@+id/textViewPostagemPerfilDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="descricao"
            app:layout_constraintBottom_toTopOf="@+id/textViewPostagemPerfilDisciplina"
            app:layout_constraintTop_toBottomOf="@+id/textViewPostagemPerfilTitulo"
            tools:layout_editor_absoluteX="34dp" />

        <TextView
            android:id="@+id/textViewPostagemPerfilDisciplina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/system_error_100"
            android:text="Desenvolvimento Web"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPostagemPerfilDescricao"
            tools:layout_editor_absoluteX="10dp" />

        <ImageView
            android:id="@+id/imageViewPostagemPerfilEditar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="32dp"
            android:tint="@color/projetoBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icone_perfil_editar" />

        <ImageView
            android:id="@+id/imageViewPostagemPerfilExcluir"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:tint="@color/projetoBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icone_perfil_excluir" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>